{
  "manifest_version": 3,
  "name": "GitHub PR Info Copier",
  "version": "1.2",
  "description": "Quick copy GitHub PR information with CMD+Shift+o or a button next to the PR title",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/favicon-16.png",
    "32": "assets/favicon-32.png",
    "48": "assets/favicon-48.png",
    "128": "assets/favicon-128.png"
  }
} 